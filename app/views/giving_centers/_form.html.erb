<%= simple_form_for @Giving_Center do |f| %>
  <%= f.input :eventdate, label: "Event Date", as: :date, start_year: Date.today.year - 5,
                              end_year: Date.today.year + 5,
                              order: [:month, :day, :year] %>
  <%= f.input :category, :collection => ["Annual Gala", "Donation Only", "Golf Outing", "School Event", "Luncheons & Dinners", "Giving Day"],:input_html => { :class => 'form-control'}, :label => 'Choose a Category', prompt: "Choose From List" %>
  <%= f.input :bpecode, label: "Event Code", :required => true %>
  <%= f.input :organization, :required => true %>
  <%= f.input :description %>
  <div class="text-center">
    <%= f.button :submit, class: "btn-custom2" %>
  </div>
<% end %>
